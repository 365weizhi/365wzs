@import helpers

.product-author
  position relative
  margin 10px auto
  .author-avatar
    size 40px 40px
    img
      border-radius 5px
  .author-name
    color $grey9
    text-shadow 1px 0 1px white
    padding-left 5px
    .name
      color $grey7
  .product-title
    color $grey6
    padding-left 5px
    font-weight bold

.product-wrapper
  .product
    position relative
    .image
      position relative
      padding-top 10px
      padding-bottom 10px
      background white
      text-align center
      box-shadow 0 0 1px $grey6 inset
      img
        size 96% auto
      .operations
        size 100% auto
        absolute-bottom -25px 0
        clear both
        a
          color $grey9
          text-shadow 1px 0 0 white
          img
            size 15px 15px
            vertical-align text-bottom
          &:hover
            color $grey6
            cursor pointer
        a.favor
          font-weight bold
          color $grey6
          float left
          &:hover
            color $grey3
        a.like
          float right
          margin 0 10px
        a.at
          float right
    .description
      color $grey6
      p
        margin 10px
    .operation

    .buy
      absolute-bottom-right 0 0
      a.buy-button
        font-weight bold
        font-size 1.8em
        margin 0 10px
        text-align center
        text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
        padding-top 15px
        padding-bottom 15px
        display block
        color black
        border-radius 5px
        background -webkit-linear-gradient(top, #d64d93, #ab2e66 100%)
        background-transition 0.5s
        box-shadow 0 0 5px $grey6
        &:hover
          background -webkit-linear-gradient(top, #ab2e66, #d64d93, 100%)

.comments
  margin-top 35px
