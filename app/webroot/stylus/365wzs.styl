@import helpers

body
  font-family SimHei
  margin 0
  background $grey13

hr
  border-top solid 1px #aaa

a:hover
  text-decoration none

#header
  z-index 1000
  size 100% auto
  text-align center
  background $grey4
  position fixed
  top 0
  margin 0
  padding 0
  #logo
    position fixed
    top 0
    left 0
    size 10% auto
    margin -20px auto auto 40px
    background #ddd
    opacity 0.5
    border-radius 350px
    display table-cell
    text-align center
    vertical-align middle
    padding 40px 10px
  #user-panel
    position fixed
    top 0
    right 0
    height $header-height
    margin-right 50px
    a
      display inline-block
      font-size 1.2em
      font-weight bold
      margin 20px auto
      padding 5px
      color $grey9
      &:hover
        color white
  #navigator
    size 700px auto
    overflow hidden
    margin 0 auto
    .item
      size 100px $header-height
      display inline-block
      float left
      a
        display block
        font-size 1.2em
        padding 5px 0 10px 0
        margin 20px auto
        size 90% auto
        color $grey9
        text-shadow 0 0 2px black
      &:hover
        cursor pointer
    .item.index
      border-bottom solid 5px #fda1a9
      &:hover
    .item.index.active
      a
        color #fda1a9
    .item.contentfavors
      border-bottom solid 5px #c791d1
      &:hover
    .item.contentfavors.active
      a
        color #c791d1
    .item.shares
      border-bottom solid 5px #c4c4bd
      &:hover
    .item.shares.active
      a
        color #c4c4bd
    .item.groups
      border-bottom solid 5px #87beea
      &:hover
    .item.groups.active
      a
        color #87beea

#container
  background none
  margin 80px auto
  clear both
  size $full auto
  .image-block
    margin 10px
    padding 0
    float left
    border solid 1px #ccc
    box-shadow 0 0 2px #bbb
    width 200px
    border-radius 5px
    background -webkit-linear-gradient(bottom, #eee, #efefef 90%, white 100%)
    strong
      color #007
    p
      clear both
    .image
      margin 10px
      z-index 0
      img
        border-radius 5px
        border solid 1px #ddd
        box-shadow 0 0 2px #eee
    .image-info
      padding 10px
      border-radius 5px
      clear both
      overflow hidden
      .favor, .like, .at
        vertical-align middle
        float right
        margin 0 5px
        img
          size 18px 18px
        .number
          vertical-align bottom 
          color #999
          text-shadow 1px 0 1px white
        &:hover
          cursor pointer
          text-decoration none
      strong
        padding-left 10px
        color #666
        float left

#footer
  size 100% auto
  text-align center
  clear both
